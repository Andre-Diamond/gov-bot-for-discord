# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=your_discord_channel_id_here

# AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Koios API Configuration
KOIOS_API_TOKEN=your_koios_api_token_here_optional
KOIOS_BASE_URL=https://api.koios.rest/api/v1

# Bot Settings
POLL_INTERVAL_HOURS=6

# Poll duration in minutes
# Default: 20160 (14 days)
# Minimum: 15 minutes
# Examples: 60 (1 hour), 1440 (1 day), 10080 (7 days)
POLL_DURATION_MINUTES=20160

# Initial block_time to start from (Unix timestamp)
# Leave empty to fetch all proposals on first run
# Example: 1704757130 (Jan 8, 2024)
# You can get current timestamp from: https://www.unixtimestamp.com/
INITIAL_BLOCK_TIME= 